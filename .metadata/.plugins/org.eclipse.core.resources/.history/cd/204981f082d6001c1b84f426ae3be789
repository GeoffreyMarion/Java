package nope;

public class semaine {
	
	public static void main(String[] args) {
		String[] semaine = {"lundi", "mar", "mercredi", "jeudi", "vendredi", "samedi", "dimanc"};
		String[] semaine2 = null;
		for(int i=0;i<7;i++) {
			if(semaine[i] == "mar"){
			semaine[i] = "mardi";
			System.out.println(semaine[i]);
			}
		
		}
		for(int i=0;i<7;i++) {
			if(semaine[i] == "dimanc"){
			System.out.println(semaine.toString());
			}
		
		}
		for(int i=0;i < semaine.length-1;i++) {
			if(semaine[i] == "dimanc"){
			semaine2 = new String[semaine.length - 1];
			for(int index = 0; index < i; index++){
				semaine2[index] = semaine[index];
            }
            for(int j = i; j < semaine.length - 1; j++){
            	semaine2[j] = semaine[j+1];
            }
            break;
        }
    }
		System.out.println(semaine[6]);
		System.out.println(semaine.length);
		System.out.println(semaine[4]);
	}
}